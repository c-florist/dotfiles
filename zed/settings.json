// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": true,
  "edit_predictions": {
      "mode": "eager"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "auto_install_extensions": {
    // Languages
    "sql": true,
    "terraform": true,
    // Tooling
    "biome": true,
    "ruff": true,
    // File formats
    "html": true,
    "toml": true,
    "dockerfile": true,
    "docker-compose": true,
    "csv": true,
    // Themes
    "catppuccin": true
  },
  "tab_size": 4,
  "base_keymap": "VSCode",
  "confirm_quit": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "languages": {
    "TypeScript": {
      "tab_size": 2
    },
    "Python": {
      "language_servers": [
        "basedpyright",
        "..."
        // Use ty and not basedpyright for LSP
        // "ty",
        // "!basedpyright",
      ]
    }
  },
  "project_panel": {
    "auto_reveal_entries": false
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "analysis": {
          "diagnosticMode": "workspace",
          "inlayHints.callArgumentNames": false
        }
      }
    }
  }
}
