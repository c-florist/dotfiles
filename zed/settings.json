// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_install_extensions": {
    // Languages
    "just": true,
    "sql": true,
    "terraform": true,
    // Tooling
    "biome": true,
    "ruff": true,
    // File formats
    "html": true,
    "toml": true,
    "dockerfile": true,
    "docker-compose": true,
    "csv": true,
    // Themes
    "catppuccin": true,
    "everforest": true
  },
  "tab_size": 2,
  "base_keymap": "VSCode",
  "confirm_quit": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "languages": {
    "Rust": {
      "tab_size": 4
    },
    "Python": {
      "tab_size": 4
    }
  },
  "project_panel": {
    "auto_reveal_entries": false
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
